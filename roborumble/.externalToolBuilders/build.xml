<?xml version="1.0" encoding="UTF-8"?>

<!-- ==================================================================== -->
<!--  Ant build script for building preparing launch directory in Eclipse -->
<!-- ==================================================================== -->

<project name="roborumble" default="build" basedir="..">

  <property name="robocode.dir" location="../robocode"/>
  <property name="launch.dir" location="${robocode.dir}/launch"/>
  <property name="roborumble.launch.dir" location="${launch.dir}/roborumble"/>

  <!-- ====================================== -->
  <!-- Target: build                          -->
  <!-- ====================================== -->
  <target name="build">

  	<ant antfile="${robocode.dir}/.externalToolBuilders/build.xml" target="build"/>
  	
  	<!-- Make RoboRumble dir -->
  	<mkdir dir="${roborumble.launch.dir}"/>
  	<mkdir dir="${roborumble.launch.dir}/temp"/>
 	<mkdir dir="${roborumble.launch.dir}/files"/>

  	<!-- Copy config files -->
    <copy todir="${roborumble.launch.dir}">
      <fileset dir="config"/>
    </copy>
  </target>
	
</project>