<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>net.sf.robocode</groupId>
    <artifactId>_root</artifactId>
    <version>1.7</version>
    <packaging>pom</packaging>
    <name>Robocode</name>
    <organization>
        <name>Robocode</name>
        <url>http://robocode.sf.net</url>
    </organization>
    <modules>
        <module>robocode.api</module>
        <module>robocode.core</module>
        <module>robocode.battle</module>
        <module>robocode.host</module>
        <module>robocode.ui</module>
        <module>robocode.sound</module>
        <module>robocode.samples</module>
        <module>robocode.roborumble</module>
        <module>robocode.tests</module>
        <module>robocode.installer</module>
        <module>robocode.repository</module>
        <module>robocode.content</module>
    </modules>
    <repositories>
        <repository>
            <id>net.sf.robocode</id>
            <url>http://robocode.sourceforge.net/maven2</url>
        </repository>
    </repositories>
    <distributionManagement>
        <downloadUrl>http://robocode.sourceforge.net/maven2-snapshot</downloadUrl>
        <repository>
            <id>net.sf.robocode</id>
            <name>Robocode release repository</name>
            <url>scp://web.sourceforge.net:22/home/groups/r/ro/robocode/htdocs/maven2</url>
        </repository>
    </distributionManagement>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <source>1.5</source>
                    <target>1.5</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-surefire-plugin</artifactId>
                <version>2.4.3</version>
            </plugin>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <version>2.2-beta-2</version>
                <configuration>
                    <finalName>robocode-setup-${project.version}</finalName>
                    <descriptors>
                        <descriptor>mvn.assembly.xml</descriptor>
                    </descriptors>
                    <archive>
                        <manifest>
                            <mainClass>net.sf.robocode.installer.AutoExtract</mainClass>
                        </manifest>
                    </archive>
                </configuration>
            </plugin>
        </plugins>
        <resources>
            <resource>
                <directory>src/main/resources</directory>
                <excludes>
                    <exclude>**/_svn/**</exclude>
                </excludes>
            </resource>
            <resource>
                <directory>src/test/resources</directory>
                <excludes>
                    <exclude>**/_svn/**</exclude>
                </excludes>
            </resource>
        </resources>
    </build>
</project>